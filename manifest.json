{
    "name": "SamsungBrowserGX",
    "description": "Mod to make Opera GX look like Samsung web browser",
    "developer": 
    {
        "name": "Cut_22"
    },
    "icons":
    {
        "512": "icon_512.png"
    },
    "manifest_version": 3,
    "mod":
    {
        "license": "license.txt",
        "payload":
        {
            "page_styles":
            [
                {
                    "css":
                    [
                        "webmodding/opera.css"
                    ],
                    "matches":
                    [
                        "https://*.opera.com/*"
                    ]
                }
            ],
            "shaders":
            {
                "Matrix green":
                {
                    "path": "shader/matrix.txt"
                },
                "Wave":
                {
                    "animation":
                    {
                        "duration": 60,
                        "steps": 3600
                    },
                    "path": "shader/wave.txt"
                }
            },
            "theme":
            {
                "dark":
                {
                    "gx_accent":
                    {
                        "h": 0,
                        "s": 0,
                        "l": 50       
                    },
                    "gx_secondary_base":
                    {
                        "h": 0,
                        "s": 0,
                        "l": 1
                    }
                },
                "light":
                {
                    "gx_accent":
                    {
                        "h": 112,
                        "s": 80,
                        "l": 44
                    },
                    "gx_secondary_base":
                    {
                        "h": 272,
                        "s": 32,
                        "l": 16
                    }
                }
            },
            "wallpaper":
            {
                "dark":
                {   
                    "image": "wallpaper/Solid_black.png",
                    "text_color": "#FFFFFF",
                    "text_shadow": "#757575"
                }
            }
        },
        "schema_version": 1
    },
    "version": "1.0"
}
